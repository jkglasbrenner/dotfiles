# this is the place to override or undo settings

# Terminal
set -g default-terminal "screen-256color"
set-option -ga terminal-overrides ",256col:Tc"

# increase history size
set -g history-limit 50000

# force Vi mode
#   really you should export VISUAL or EDITOR environment variable, see manual
#set -g status-keys vi
#set -g mode-keys vi

# move status line to top
#set -g status-position top

# -- other configurations --

# VIM keys
# setw -g mode-keys vi
# set -g status-keys vi
# set -g @shell_mode 'vi'

# Automatically set window title
# set-window-option -g automatic-rename on
# set-option -g set-titles on
set-option -g allow-rename off

# Change some colors
tmux_conf_theme_pane_border='#7F9F7F'                   # zenburn-green
tmux_conf_theme_pane_active_border='#93E0E3'            # zenburn-cyan

# pane indicator colours
tmux_conf_theme_pane_indicator='#93E0E3'                # zenburn-cyan
tmux_conf_theme_pane_active_indicator='#93E0E3'         # zenburn-cyan

# status line style
tmux_conf_theme_message_bg='#F0DFAF'                    # zenburn-yellow

# status line command style (<prefix> : Escape)
tmux_conf_theme_message_command_fg='#F0DFAF'            # zenburn-yellow

# window modes style
tmux_conf_theme_mode_bg='#F0DFAF'                       # zenburn-yellow

# window current status style
tmux_conf_theme_window_status_current_bg='#93e0e3'      # zenburn-cyan

# window bell status style
tmux_conf_theme_window_status_bell_fg='#f0dfaf'         # zenburn-yellow

# window last status style
tmux_conf_theme_window_status_last_fg='#93e0e3'         # zenburn-cyan

# status left style
tmux_conf_theme_status_left_fg='#000000,#000000,#dcdccc'  # black, black , zenburn-fg
tmux_conf_theme_status_left_bg='#f0dfaf,#9c6363,#93e0e3'  # zenburn-yellow, zenburn-red-3, zenburn-cyan

# status right style
tmux_conf_theme_status_right_fg='#8a8a8a,#e4e4e4,#000000' # light gray, white, black
tmux_conf_theme_status_right_bg='#080808,#8c5353,#dcdccc' # dark gray, zenburn-red-4, zenburn-fg

# No bells at all
set -g bell-action none

# Change the prefix key to C-a
unbind C-a
unbind C-b
set -g prefix C-a
bind C-a send-prefix

# Turn the mouse on, but without copy mode dragging
# set -g mouse on

#urxvt tab like window switching (-n: no prior escape seq)
bind -n S-down new-window -c '#{pane_current_path}'
bind -n S-left prev
bind -n S-right next
bind -n C-left swap-window -t -1
bind -n C-right swap-window -t +1
unbind C-h
unbind C-l

# Remap window navigation to vim
# unbind-key j
# bind-key j select-pane -D
# unbind-key k
# bind-key k select-pane -U
# unbind-key h
# bind-key h select-pane -L
# unbind-key l
# bind-key l select-pane -R

# Use Alt-vim keys without prefix key to switch panes
bind -n M-h select-pane -L
bind -n M-j select-pane -D 
bind -n M-k select-pane -U
bind -n M-l select-pane -R

# Change keys for window splitting
bind-key v split-window -h -c '#{pane_current_path}'
bind-key s split-window -v -c '#{pane_current_path}'

# No delay for escape key press
set -sg escape-time 0

# super useful when using "grouped sessions" and multi-monitor setup
setw -g aggressive-resize on

# Mouse scrolling
bind -T root WheelUpPane   if-shell -F -t = "#{alternate_on}" "send-keys -M" "select-pane -t =; copy-mode -e; send-keys -M"
bind -T root WheelDownPane if-shell -F -t = "#{alternate_on}" "send-keys -M" "select-pane -t =; send-keys -M"

